@{
    ViewBag.title = "5 Sekund";
}

<br /><br /><br />
<div class="row">
    <div class="col s6">
        <div class="row grey lighten-3">
            <form class="col s12 grey lighten-3" asp-controller="Home" asp-action="Create" method="post">
                <div class="black-text"> <b>Podaj nowe pytanie</b></div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">mode_edit</i>
                    <textarea placeholder="Pytanie" id="question" name="question" type="text" class="validate materialize-textarea"> </textarea>
                </div>
                <input class="btn blue darken-1" type="submit" value="Dodaj"/> <br/> <br/>
                <input class="btn red" type="submit" asp-controller="Home" asp-action="Index" value="Anuluj"/>
            </form>
        </div>   
    </div>
</div>